<style>
    @keyframes tick {
      0% { transform: scale(0.5); opacity: 0; }
      50% { transform: scale(1.2); opacity: 1; }
      100% { transform: scale(1); }
    }
    
    .tick-icon {
      animation: tick 1s ease-in-out;
      fill: #28a745;
      width: 100px;
      height: 100px;
    }
  </style>

<div class="container py-4">
    <div class="row border rounded border-success d-flex flex-column justify-content-center" style="min-height: 480px;">
