<%- include('../includes/head') %>
<%- include('../includes/header') %>

<section class="container shadow bg-light my-lg-4 mb-3 py-3 rounded" style="max-width: 380px; width: 100%">
    <div class="text-center text-dark">
        <h3 class="py-2">Login</h3>
    </div>

    <form action="#" method="post" name="loginForm" id="loginForm">

        <div class="form-group">
            <label for="numlogin" class="form-label m-0">Mobile Number</label>
            <div class="input-group">
                <div class="input-group-prepend"><span class="input-group-text" id="mob-addon">+91</span></div>
                <input type="text" id="numlogin" name="number" class="form-control" aria-describedby="mob-addon">
            </div>
            <span class="text-danger d-none" style="font-size: 12px; margin-left: 10px;" id="numErrorlogin"></span>
        </div>

        <div class="form-group">
            <a class="float-right" href="">forget password?</a>
            <label for="passwordlogin" class="form-label m-0">Password</label>
            <input type="password" id="passwordlogin" name="password" class="form-control">
            <span class="text-danger d-none" style="font-size: 12px; margin-left: 10px;" id="passErrorlogin"></span>
        </div>
        <% if (locals.logginErr) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= logginErr %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
        <div class="d-flex justify-content-center my-3">
            <button class="btn shadow btn-info rounded-pill text-center px-5" type="submit"><strong>login</strong></button>
        </div>
    </form>
    <% if (locals.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    <hr>
    <a href="/signin-otp" class="btn btn-info w-100 mb-3">Login With SMS</a>
    <h6>Not registered? <a href="/signup">Create an account</a></h6>

</section>

<script src="/javascripts/loginValidation.js"></script>

<%- include('../includes/foot') %>